#!/usr/bin/env bash

# --- Moving around ---
alias ..="cd .."
alias ...="cd ../.."
alias oo='open .'

# --- Easy Navigate ---
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"

# alias react-reddit='cd ~/Projects/_Playground/reddit-feed && code . && yarn start'

# --- Git Stuff ---
alias status='git status'
alias checkout='git checkout'
alias checkoutb='git checkout -b'
alias commit='git commit'
alias rebase='git rebase'
alias branch='git branch'
alias brancha='git branch -a'
alias pull='git pull'
alias push='git push'
alias pushf='git push --force'
alias add='git add'
alias adda='git add -A'
alias mergetool='git mergetool'
alias diff='git diff --color --color-words --abbrev'

# Logging aliases
alias logf='git log --date-order --all --graph --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ar%Creset %C(red bold)%d%Creset%s"'
alias logs='git log --date-order --all --graph --name-status --format="%C(green)%h%Creset %C(yellow)%an%Creset %C(blue bold)%ar%Creset %C(red bold)%d%Creset%s"'
alias loga='git log --graph --decorate --pretty=oneline --abbrev-commit --all'
alias logd='git log --graph --decorate --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset --abbrev-commit --date=relative --all"'

# stashing aliases
alias spit='git stash show -p'
alias list='git stash list'
alias stash='git stash'
alias save='git stash save'
alias saveu='git stash save -u'
alias drop="git stash drop"
alias pop='git stash pop'
alias aply='git stash apply'

# hardcore-stashing aliases
alias spit0='git stash show -p stash@{0}'
alias spit1='git stash show -p stash@{1}'
alias spit2='git stash show -p stash@{2}'
alias spit3='git stash show -p stash@{3}'
alias spit4='git stash show -p stash@{4}'
alias spit5='git stash show -p stash@{5}'
alias spit6='git stash show -p stash@{6}'
alias drop0='git stash drop stash@{0}'
alias drop1='git stash drop stash@{1}'
alias drop2='git stash drop stash@{2}'
alias drop3='git stash drop stash@{3}'
alias drop4='git stash drop stash@{4}'
alias drop5='git stash drop stash@{5}'
alias drop6='git stash drop stash@{6}'

alias undocommit='git reset HEAD~'
alias undopush="git push -f origin HEAD^:master"
alias hreset='git reset --hard'
alias branchd='git branch --edit-description'

# git root
alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'
alias master="git checkout master"

# gist-paste filename.ext -- create private Gist from the clipboard contents
alias gist-paste="gist --private --copy --paste --filename"  
# gist-file filename.ext -- create private Gist from a file
alias gist-file="gist --private --copy"  										

# --- Shortcuts ---
alias zcfg="vim ~/.zshrc"
alias refresh='source ~/.zshrc; echo "Reloaded .zshrc."'
alias chmox='chmod -x'
alias bye='sudo shutdown -h now'
alias rm_modules="find . -name "node_modules" -type d -prune -exec rm -rf '{}' +"
alias update='sudo apt-get update && sudo apt-get upgrade'
alias upgrade='sudo apt-get upgrade'
alias clean='sudo apt-get autoclean && sudo apt-get autoremove'

# `rm` and `mv` are so dangerous, they must always ask for confirmation.
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

# Common shell functions
alias less='less -r'
alias tf='tail -f'
alias l='less'
alias lh='ls -alt | head' # see the last modified files
alias screen='TERM=screen screen'
alias cl='clear'

# Trim new lines and copy to clipboard
alias c="tr -d '\n' | pbcopy"										
# Recursively delete `.DS_Store` files
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"
# Empty the Trash on all mounted volumes and the main HDD.
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl; sqlite3 ~/Library/Preferences/com.apple.LaunchServices.QuarantineEventsV* 'delete from LSQuarantineEvent'"
# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Always enable colored `grep` output
alias gi='grep -r -i --color'																	# Sensible defaults for grep (recursive, case-insensitive)
alias gin='grep -r -i -n --color'															# Add line numbers.
# Grep with perl regex.
which ggrep > /dev/null 2>&1 &&\
  alias gp='ggrep -r -P --color' ||\
  alias gp='grep -r -P --color'

alias gg='git grep --untracked'																# Grep git repo.
alias gil='grep -w -i -r -l --color'													# Grep only files
alias grc='grep -win -C 2 --color'														# Grep with Lines Before and After
alias gdc='grep -wirc --color'																# Grep in directory with count

# Kill all the tabs in Chrome to free up memory
alias chromekill="ps ux | grep '[C]hrome Helper --type=renderer' | grep -v extension-process | tr -s ' ' | cut -d ' ' -f2 | xargs kill"

# Lock the screen (when going AFK = Away From Keyboard)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec ${SHELL} -l"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'


# --- Applications ---
alias vs="code"
alias vsc="code ."
alias chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome'
alias ios='open -a /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app'

# --- Functions ---
alias wp-bp="webpack-boilerplate"
alias mk="new-dir"
alias f="find-shorthand"

# --- Show human friendly numbers and colors ---
alias df='df -h'
alias du='du -h -d 2'

if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
	export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
else # macOS `ls`
	colorflag="-G"
	export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
fi

alias l="ls -lF ${colorflag}"																	# long format
alias la="ls -laF ${colorflag}"																# long format, including dot files
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"			# only directories
alias ls="command ls ${colorflag}"														# Always use color output for `ls`

# --- IP Addresses ---
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en1"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"
alias myip="ifconfig | grep 'inet ' | grep -v 127.0.0.1 | awk '{print \$2}'"
alias lsof-tcp='lsof -iTCP'
alias lsof-tcp-listen='lsof -iTCP -sTCP:LISTEN -P'

alias nr="npm run --silent"																		# Run npm script without annoying noise
alias j="npx jest --watch"																		# Jest watch

# One of @janmoesen’s ProTip™s HTTP requests
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
	alias "${method}"="lwp-request -m '${method}'"
done

# Get Prepared for LiveStream
alias tutMode='defaults write com.apple.dock autohide -bool true;
							 killall Dock;
							 defaults write com.apple.menuextra.clock IsAnalog -bool true;
							 killall SystemUIServer;
							 rm -rf ~/.Trash/*;'

# Set everything back to Normal (Regular Mode)
alias regMode='defaults write com.apple.dock autohide -bool false
							killall Dock;
							defaults write com.apple.menuextra.clock IsAnalog -bool false;
							killall SystemUIServer;'