#!/bin/bash
GITHUB_STATUS=$(curl -sS https://status.github.com/api/status.json | jq -r '.status')

INDICATIOR="#[fg=colour237]⦁"
case $GITHUB_STATUS in
  ma*)
    STATUS="#[fg=red]   $INDICATOR "
    ;;
  mi*)
    STATUS="#[fg=yellow]   $INDICATIOR "
    ;;
  *)
    STATUS=""
    ;;
esac

echo "$GITHUB_STATUS"