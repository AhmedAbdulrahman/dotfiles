snippet html5 "HTML Block 5" b
<!DOCTYPE html>
    <title>${1:Title}</title>
    <meta charset="utf8">
    <meta name="viewport" content="initial-scale=1, width=device-width">
    <link rel="stylesheet" href="${2:./style.css}">
    $0
    <script src="${3:./bundle.js}"></script>
endsnippet

snippet html "HTML Block" b
<!DOCTYPE html>
<html>
	<head>
		<title>${1:Title}</title>
		<meta charset="utf8">
		<meta name="viewport" content="initial-scale=1, width=device-width">
		<link rel="stylesheet" href="${2:style.css}">
	</head>
	<body>
		$0
		<script src="${3:bundle.js}"></script>
	</body>
</html>
endsnippet

snippet "wrap([a-z]+)?" "wrap with tag" br
<${1:`!p snip.rv = match.group(1) if match.group(1) is not None else "div"`} ${2:class="$3"}>
	${0:${VISUAL}}
</$1>
endsnippet

